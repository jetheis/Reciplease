

<div class="row">
  <div class="span5"><h1>Listing recipes</h1></div>
  <div class="span5"></div>
  <div class="span2"><%= link_to 'New Recipe', new_recipe_path, :class=>"btn btn-success" %></div>
</div>
<div class="row-fluid">
  <ul class="thumbnails">
  	
    <% paginated_recipes = @recipes.paginate(:page => params[:page], :per_page => 12) %>
    <% paginated_recipes.each do |recipe| %>
      <% if recipe.owner.active %>
      	<%= render "recipes/thumbnail_block", :recipe => recipe %>
      <% end%>
    <% end %>
  </ul>
</div>

<span class = "apple_pagination">
	<%= will_paginate paginated_recipes %>
</span>
