<div class="row">
	<div class="span7">
		<h2><%= @recipe.name %></h2>
		<h4>By <%= link_to @recipe.owner.name, @recipe.owner %></h4>
				
		<%= render "rating_form" %><br />
		
		<h5>Description</h5>
		<p><%= render_markdown(@recipe.description) %></p>
		
		<h5>Ingredients</h5>
		<p><%= render_markdown(@recipe.ingredients) %></p>
		
		<h5>Instructions</h5>
		<p><%= render_markdown(@recipe.instructions)  %></p>
		
		<br />
		<%= social_share_button_tag("Check out this awesome recipe!\n\n#{@recipe.name}") %>
		<br />
		
		<% if @recipe.owner == current_user %>
		  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
		  <%= link_to 'Delete', recipe_path(@recipe), :method => :delete %> |
		<% else %>
		  <%= link_to 'Personalize', personalize_recipe_path(@recipe) %> |
		<% end %>
		<%= link_to 'History', recipe_history_path(@recipe) %>
	</div>
	
	<div id="image" class="span5" style="float:right">
	  <%= image_tag @recipe.image.url(:medium) %>
	</div>
</div>
	
<div class="row spacer">
	<div class = "span7">
		<%= render 'comments/display_comments'%>
		<%= yield %>
	</div>
</div>