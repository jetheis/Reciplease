<div class="row">
	<div class="span7">
		<div class="tab-content">
			<div class="tab-pane active" id="bio">
				<%= render 'user_bio' %></div>
				
			<div class="tab-pane" id="fav_recipes">
				<%= render 'user_favorite_recipes'%></div>
				
			<div class="tab-pane" id="recipes">
				<%= render 'user_recipes' %></div>
		</div>
	</div>
	
    <div class="span3" id="sidebar">
      <%= image_tag @user.gravatar_url :size => 250 %>
      <h1><%= @user.name %></h1>
      <p class="slogan">
      	<%= ["Food Fanatic", "Cool Cook", "Rad Recipleaser", ].sample %>
      </p>
      
      <ul>
      	<li class="active"><a href="#bio" data-toggle="tab">
        	Full Bio</a><br />I think, therefore I cook...
        </li>
        	
      	<li><a href="#recipes" data-toggle="tab">
      		<%= @user.name %>'s Recipes</a><br />Makin' Bacon Pancakes
      	</li>
      	
        <li><a href="#fav_recipes" data-toggle="tab">
        	<%= @user.name %>'s Favorite Recipes</a><br />Recipe's to die for!
        </li>
        
        <% if @user == current_user %>
        	<li>
    		<%= link_to('Edit account', edit_user_registration_path) %>
    		</li>
    	<% end %>
      </ul>
    </div>    
</div> 
<div class="row">
	<div class="span1">
		<%= social_share_button_tag("Check out #{@user.name}`s profile on Reciplease!") %>
	</div>
</div>

<div class="row spacer">
	<div class = "span7">
		<%= render 'comments/display_comments'%>
		<%= yield %>
	</div>
</div>
