<%= form_for :comment, :url => { :action => 'add_comment', :controller => 'comments' } do |f|%>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  
  <%= f.submit 'Add Comment' %>

  <%= f.hidden_field :commentable_type, :value => :recipe %>
  <%= f.hidden_field :commentable_id, :value => @recipe.id %>
<% end %>