<h2>Edit <%= resource_name.to_s.humanize %></h2><%= render :partial => 'user_form', :locals => { :registered => true, :submit_label => 'Update' } %><h3>Cancel my account</h3><p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure? This will suspend your account.\n" }, :method => :delete %></p><%= link_to "Back", :back %>