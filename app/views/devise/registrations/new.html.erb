<h2>Sign up</h2>	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>	  <%= f.error_notification %>	  <%= display_base_errors resource %>	  <%= f.input :name, :autofocus => true %> 	  <%= f.input :email, :required => true %>	  <%= f.input :password, :required => true %>	  <%= f.input :password_confirmation, :required => true %>	  <%= f.label :Bio %>	  <%= f.text_area :bio, :required => false, :cols => 30, :rows => 5 %> <br/>	  <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>	<% end %><%= render "devise/shared/links" %>